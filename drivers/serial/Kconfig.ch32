DT_COMPAT_CH32_USART := wch,ch32-usart

config UART_CH32
	bool "CH32 serial driver"
	default $(dt_compat_enabled,$(DT_COMPAT_CH32_USART))
	depends on SOC_SERIES_CH32V
	select SERIAL_HAS_DRIVER
	select GPIO_CH32
	# select SERIAL_SUPPORT_INTERRUPT
	help
	  This option enables the USART driver for CH32 SoC family.
